    body
        .navbar.navbar-inverse.navbar-fixed-top
            .navbar-inner
                .container
                    a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    text.brand Server demo
                    .nav-collapse.collapse
                        ul.nav
                            li.active: a(href='/client') Home
                            li: a(href='/') About
                            li.dropdown
                                a.dropdown-toggle(href='#', data-toggle="dropdown") Dropdown <b class="caret"></b>
                                ul.dropdown-menu
                                    li: a(href='#') Action
                                    li.divider
                                    li.nav-header Nav header
                                    li: a(href='#') Separated link
                                    li: a(href='#') Another link
                        form.navbar-form.pull-right#nicknameForm
                            input.span2(type="text", placeholder="Nickname")#nicknameInput
                            button.btn(type="submit")#setNickname Sign in

        .container.body-content
            header
                h1 Client app

            div#chatControls
                input(type='text')#messageInput
                button.btn(type="submit")#submit SEND

            div#chatEntries
